generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlserver"
  url      = env("DATABASE_URL")
}

model User {
  id            Int            @id @default(autoincrement())
  twitter       String         @unique @db.VarChar(255)
  github        String         @unique @db.VarChar(255)
  website       String         @db.VarChar(255)
  biography     String         @db.VarChar(800)
  categories    Category[]
  eventTypes    EventType[]
  technologies  Technology[]
  userSearchers UserSearcher[]
}

model EventType {
  id    Int    @id @default(autoincrement())
  name  String @unique @db.VarChar(255)
  icon  String @db.VarChar(4000)
  users User[]
}

model Category {
  id         Int          @id @default(autoincrement())
  name       String       @unique @db.VarChar(255)
  icon       String       @db.VarChar(4000)
  Technology Technology[]
  users      User[]
}

model Technology {
  id         Int      @id @default(autoincrement())
  name       String   @unique @db.VarChar(255)
  categoryId Int
  icon       String   @db.VarChar(4000)
  category   Category @relation(fields: [categoryId], references: [id])
  users      User[]
}

model UserSearcher {
  id           Int      @id @default(autoincrement())
  github       String   @unique @db.VarChar(255)
  queriesToday Int      @default(0)
  lastQuery    DateTime @db.DateTime
  lastLogin    DateTime @db.DateTime
  users        User[]
}
